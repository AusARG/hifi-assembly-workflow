executor {
    name = 'pbspro'
    queue = 'normal'  
    project = 'wz54' 
    storage = 'scratch/wz54+gdata/wz54'
}

process {
	
	cpus = 1			// dafualt cpu usage
	memory = '20GB'	    // default memory
	time = '48:00:00'   // default time limit

    withLabel:  bam2fasta { cpus = 1 ; memory = '10GB' ; time = '02:00:00' ; module = 'samtools' }
    withLabel:  jellyfish { cpus = 1 ; memory = '10GB' ; time = '02:00:00';  module = 'jellyfish'  }
    withLabel:  genomescope { cpus = 1 ; memory = '10GB' ; time = '02:00:00' ; module = 'genomescope' }
    withLabel:  assembly { cpus = 4 ; memory = '30GB' ; time = '48:00:00' ; module = 'ipa' }
    withLabel:  evaluate_assemblies { cpus = 1 ; memory = '20GB' ; time = '20:00:00' ; module = 'quast' }
    withLabel:  assemblies_completeness { cpus = 1 ; memory = '60GB' ; time = '10:00:00' ; module = 'busco' }
}

params.busco_db = "/g/data/wz54/groupResources/lib/busco/eukaryota_odb9"